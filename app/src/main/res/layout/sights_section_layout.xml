<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.karlo.sstconference.ui.FunctionalButton
        android:id="@+id/museum_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/museum"
        app:swChecked="true"/>

    <com.example.karlo.sstconference.ui.FunctionalButton
        android:id="@+id/church_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/church"/>

    <com.example.karlo.sstconference.ui.FunctionalButton
        android:id="@+id/library_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/library"/>

    <com.example.karlo.sstconference.ui.FunctionalButton
        android:id="@+id/zoo_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/zoo"/>

</LinearLayout>