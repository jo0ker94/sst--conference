<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/button_blue</item>
        <item name="colorPrimaryDark">@color/material_blue</item>
        <item name="colorAccent">@color/button_blue</item>
    </style>

    <style name="NoActionBarTheme" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoActionBarTheme.Launcher">
        <item name="android:windowBackground">@drawable/sst2017_welcome</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_grey</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextInputLayoutStyle" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="hintTextAppearance">@style/TextFloatLabelAppearance</item>
        <item name="android:textColorHint">@color/divider_grey</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="hintTextAppearance">@style/TextFloatLabelAppearance</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/algorithm_gray</item>
        <item name="android:textSize">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:theme">@style/EditTextTheme</item>
    </style>

    <style name="EditTextTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/grey_80</item>
        <item name="colorControlActivated">@color/button_blue</item>
    </style>

    <style name="TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
       <!--<item name="android:textColor">@color/divider_grey</item>!-->
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ClickableBlueButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/clickable_blue_button_round_corners</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="LoginButton" parent="ClickableBlueButton">
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="SideBySideButtonBlue" parent="ClickableBlueButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="SideBySideButtonWhite" parent="SideBySideButtonBlue">
        <item name="android:textColor">@color/select_comment_header_color</item>
        <item name="android:background">@drawable/clickable_white_button_round_corners</item>
    </style>

    <style name="SideBySideButtonOrange" parent="SideBySideButtonBlue">
        <item name="android:background">@drawable/clickable_orange_button_round_corners</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionMenuTextAppearance">@style/ToolbarMenuStyle</item>
    </style>

    <style name="ToolbarMenuStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="BasicParentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="BlueSwitch" parent="AppTheme">
        <item name="android:paddingRight">16dp</item>
        <item name="colorControlNormal">@color/grey_80</item>
        <item name="colorControlActivated">@color/button_blue</item>
        <item name="android:theme">@style/BlueColorTheme</item>
    </style>

    <style name="BlueColorTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/grey_80</item>
        <item name="colorControlActivated">@color/button_blue</item>
    </style>

    <style name="ListItemMargins">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="NumberPickerStyle" parent="AppTheme">
        <item name="android:textSize">14dp</item>
        <item name="colorControlNormal">@color/button_blue</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textSize">16dp</item>
        <item name="colorPrimary">@color/material_blue</item>
        <item name="colorAccent">@color/material_blue</item>
    </style>

    <style name="HomeScreenItemTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
